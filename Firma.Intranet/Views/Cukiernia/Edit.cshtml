@model Firma.Data.Data.Sklep.Cukiernia

@{
    ViewData["Title"] = "Edytuj cukiernię";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-white">
                <h4 class="mb-0 text-center">Formularz edycji cukierni</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="IdCukierni" />

                    <div class="form-group mb-3">
                        <label asp-for="Nazwa" class="form-label fw-bold"></label>
                        <input asp-for="Nazwa" class="form-control" placeholder="Wprowadź nazwę cukierni" />
                        <span asp-validation-for="Nazwa" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Adres" class="form-label fw-bold"></label>
                        <input asp-for="Adres" class="form-control" placeholder="Wprowadź adres cukierni" />
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Telefon" class="form-label fw-bold"></label>
                        <input asp-for="Telefon" class="form-control" placeholder="Wprowadź telefon cukierni" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" placeholder="Wprowadź e-mail cukierni" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Opis" class="form-label fw-bold"></label>
                        <input asp-for="Opis" class="form-control" placeholder="Wprowadź opis cukierni" />
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="GodzinyOtwarcia" class="form-label fw-bold"></label>
                        <input asp-for="GodzinyOtwarcia" class="form-control" placeholder="Wprowadź godziny otwarcia cukierni" />
                        <span asp-validation-for="GodzinyOtwarcia" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AdresURL" class="form-label fw-bold"></label>
                        <input asp-for="AdresURL" class="form-control" placeholder="Wprowadź adres URL zdjęcia cukierni" />
                        <span asp-validation-for="AdresURL" class="text-danger"></span>
                    </div>
                    
                <div class="form-group mb-3">
                <label asp-for="IFrameGoogleMap" class="form-label fw-bold"></label>
                        <input asp-for="IFrameGoogleMap" class="form-control" placeholder="Wprowadź iframe Mapy Google" />
                        <span asp-validation-for="IFrameGoogleMap" class="text-danger"></span>
            </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
