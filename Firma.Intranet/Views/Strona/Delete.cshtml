@model Firma.Data.Data.CMS.Strona

@{
    ViewData["Title"] = "Usuń stronę";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0 text-center">Potwierdź usunięcie strony</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.LinkTytul)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.LinkTytul)</dd>

                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Tytul)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Tytul)</dd>

                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Tresc)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Tresc)</dd>

                    <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Pozycja)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Pozycja)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdStrony" />
                    <div class="mt-4 d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-danger">Usuń</button>
                        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
