@model Firma.Data.Data.Sklep.Reklamacja

@{
    ViewData["Title"] = "Usuń Reklamację";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header text-white">
                <h4 class="mb-0 text-center">Potwierdź usunięcie Reklamacji</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Zamówienie</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Zamowienie.Numer)</dd>
                    <dt class="col-sm-4 fw-bold">Opis</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Opis)</dd>
                    <dt class="col-sm-4 fw-bold">Data zgłoszenia</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DataZgloszenia)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdReklamacji" />
                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger">Usuń</button>
                        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
