@model Firma.Data.Data.Sklep.ProduktSkladnik

@{
    ViewData["Title"] = "Create";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-white">
                <h4 class="mb-0 text-center">Formularz dodawania składnika do produktu</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="IloscWymagana" class="form-label fw-bold"></label>
                        <input asp-for="IloscWymagana" class="form-control" placeholder="Wprowadź wymaganą ilość" />
                        <span asp-validation-for="IloscWymagana" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3 fw-bold">
                        <label asp-for="IdProduktu" class="form-label"></label>
                        <select asp-for="IdProduktu" class="form-control" asp-items="ViewBag.IdProduktu">
                            <option value="">Wybierz produkt</option>
                        </select>
                    </div>

                    <div class="form-group mb-3 fw-bold">
                        <label asp-for="IdSkladnika" class="form-label"></label>
                        <select asp-for="IdSkladnika" class="form-control" asp-items="ViewBag.IdSkladnika">
                            <option value="">Wybierz składnik</option>
                        </select>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn shadow-none">Zapisz pozycję</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn">Powrót do listy</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
