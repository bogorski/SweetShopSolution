@model Firma.Data.Data.Sklep.Klient

@{
    ViewData["Title"] = "Usuń klienta";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header text-white">
                <h4 class="mb-0 text-center">Potwierdź usunięcie klienta</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Imię</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Imie)</dd>

                    <dt class="col-sm-4 fw-bold">Nazwisko</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nazwisko)</dd>

                    <dt class="col-sm-4 fw-bold">Adres</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Adres)</dd>

                    <dt class="col-sm-4 fw-bold">Telefon</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefon)</dd>

                    <dt class="col-sm-4 fw-bold">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 fw-bold">Data rejestracji</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DataRejestracji)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdKlienta" />
                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger">Usuń</button>
                        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
