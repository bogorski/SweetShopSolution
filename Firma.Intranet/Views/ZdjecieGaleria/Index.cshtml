@model IEnumerable<Firma.Data.Data.CMS.ZdjecieGaleria>

@{
    ViewData["Title"] = "Galeria zdjęć";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-8 d-flex justify-content-between align-items-center mb-3">
            <h1 class="h3">Lista zdjęć</h1>
            <a asp-action="Create" class="btn btn-primary">Dodaj nowe zdjęcie</a>
        </div>
        <div class="col-8 table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-color">
                <tr>
                    <th class="text-center">Pozycja wyświetlania</th>
                    <th class="text-center">Nazwa zdjęcia</th>
                    <th class="text-center">Podgląd zdjęcia</th>
                    <th class="text-center">Akcje</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="p-2 text-center">@Html.DisplayFor(modelItem => item.Pozycja)</td>
                            <td class="p-2">@Html.DisplayFor(modelItem => item.Nazwa)</td>
                            <td class="p-2 text-center">
                                <img src="@item.AdresURL" alt="Zdjęcie" class="img-preview" />
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.IdZdjecia" class="btn btn-sm me-2">Edytuj</a>
                                    <a asp-action="Delete" asp-route-id="@item.IdZdjecia" class="btn btn-sm">Usuń</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
