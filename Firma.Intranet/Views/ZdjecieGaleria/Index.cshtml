@model IEnumerable<Firma.Data.Data.CMS.ZdjecieGaleria>

@{
    ViewData["Title"] = "Galeria zdjęć";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">Lista zdjęć</h1>
        <a asp-action="Create" class="btn btn-primary">Dodaj nowe zdjęcie</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-color">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nazwa)</th>
                <th>@Html.DisplayNameFor(model => model.Pozycja)</th>
                <th>@Html.DisplayNameFor(model => model.AdresURL)</th>
                <th class="text-center">Akcje</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="p-2">@Html.DisplayFor(modelItem => item.Nazwa)</td>
                    <td class="p-2">@Html.DisplayFor(modelItem => item.Pozycja)</td>
                    <td class="p-2">@Html.DisplayFor(modelItem => item.AdresURL)</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.IdZdjecia" class="btn btn-sm me-2">Edytuj</a>
                            <a asp-action="Details" asp-route-id="@item.IdZdjecia" class="btn btn-sm me-2">Szczegóły</a>
                            <a asp-action="Delete" asp-route-id="@item.IdZdjecia" class="btn btn-sm">Usuń</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
