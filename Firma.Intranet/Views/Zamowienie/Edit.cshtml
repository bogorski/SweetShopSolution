@model Firma.Data.Data.Sklep.Zamowienie

@{
    ViewData["Title"] = "Edytuj Zamówienie";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-white">
                <h4 class="mb-0 text-center">Formularz edycji zamówienia</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="IdZamowienia" />

                    <div class="form-group mb-3">
                        <label asp-for="Numer" class="form-label fw-bold"></label>
                        <input asp-for="Numer" class="form-control" placeholder="Wprowadź numer zamówienia" />
                        <span asp-validation-for="Numer" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Kwota" class="form-label fw-bold"></label>
                        <input asp-for="Kwota" class="form-control" placeholder="Wprowadź kwotę zamówienia" />
                        <span asp-validation-for="Kwota" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Status" class="form-label fw-bold"></label>
                        <input asp-for="Status" class="form-control" placeholder="Wprowadź status zamówienia" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DataZamowienia" class="form-label fw-bold"></label>
                        <input asp-for="DataZamowienia" class="form-control" type="date" />
                        <span asp-validation-for="DataZamowienia" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DataOdbioru" class="form-label fw-bold"></label>
                        <input asp-for="DataOdbioru" class="form-control" type="date" />
                        <span asp-validation-for="DataOdbioru" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Uwagi" class="form-label fw-bold"></label>
                        <textarea asp-for="Uwagi" class="form-control" placeholder="Wprowadź uwagi do zamówienia" rows="4"></textarea>
                        <span asp-validation-for="Uwagi" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="IdKlienta" class="form-label fw-bold">Klient</label>
                        <select asp-for="IdKlienta" class="form-control" asp-items="ViewBag.IdKlienta">
                            <option value="">Wybierz klienta</option>
                        </select>
                        <span asp-validation-for="IdKlienta" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
