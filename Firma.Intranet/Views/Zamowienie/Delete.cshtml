@model Firma.Data.Data.Sklep.Zamowienie

@{
    ViewData["Title"] = "Usuń Zamówienie";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header text-white">
                <h4 class="mb-0 text-center">Potwierdź usunięcie Zamówienia</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Numer</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Numer)</dd>

                    <dt class="col-sm-4 fw-bold">Kwota</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Kwota)</dd>

                    <dt class="col-sm-4 fw-bold">Status</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                    <dt class="col-sm-4 fw-bold">Data Zamówienia</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DataZamowienia)</dd>

                    <dt class="col-sm-4 fw-bold">Data Odbioru</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DataOdbioru)</dd>

                    <dt class="col-sm-4 fw-bold">Uwagi</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Uwagi)</dd>

                    <dt class="col-sm-4 fw-bold">Adres Klienta</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Klient.Adres)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdZamowienia" />
                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger">Usuń</button>
                        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
