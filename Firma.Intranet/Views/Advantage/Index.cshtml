@model IEnumerable<Firma.Data.Data.CMS.Advantage>

@{
    ViewData["Title"] = "Advantage";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">Korzyści</h1>
        <a asp-action="Create" class="btn btn-primary">Dodaj nową korzyść</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-color">
                <tr>
                    <th>Ikona</th>
                    <th>@Html.DisplayNameFor(model => model.Header)</th>
                    <th>@Html.DisplayNameFor(model => model.Contents)</th>
                    <th>@Html.DisplayNameFor(model => model.DisplayOrder)</th>
                    <th>Data utworzenia</th>
                    <th>Data edycji</th>
                    <th class="text-center">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Icon)</td>
                        <td>@Html.DisplayFor(modelItem => item.Header)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contents)</td>
                        <td>@Html.DisplayFor(modelItem => item.DisplayOrder)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdAdvantage" class="btn btn-sm me-3">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@item.IdAdvantage" class="btn btn-sm">Usuń</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
