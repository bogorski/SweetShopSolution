<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Firma.Intranet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Firma.Intranet.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-md navbar-light border-bottom box-shadow px-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand d-sm-block d-md-none" asp-controller="Home" asp-action="Index">
                    <img src="~/content/logo.svg" class="logo" alt="Logo">
                </a>
                <div class="navbar-collapse collapse d-md-flex justify-content-between w-100" id="navbarNav">
                    <a class="navbar-brand d-none d-md-block mx-auto mx-md-0" asp-controller="Home" asp-action="Index">
                        <img src="~/content/logo.svg" class="logo-lg" alt="Logo">
                    </a>
                    <ul class="navbar-nav me-auto d-flex justify-content-evenly w-100">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Zamowienie" asp-action="Index">ZAMÓWIENIA</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produkt" asp-action="Index">PRODUKTY</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Kategoria" asp-action="Index">KATEGORIE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cukiernia" asp-action="Index">CUKIERINIE</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Skladnik" asp-action="Index">SKŁADNIKI</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Klient" asp-action="Index">KLIENCI</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reklamacja" asp-action="Index">REKLAMACJE</a>
                        </li>
                        
                        <li class="nav-item">
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    CMS
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Aktualnosc" asp-action="Index">Aktualności</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Advantage" asp-action="Index">Korzyści</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="ZdjecieGaleria" asp-action="Index">Galeria zdjęć</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="CompanyHistorie" asp-action="Index">Historia firmy</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Contact" asp-action="Index">Dane siedziby</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="mt-auto">
        <div class="container-fluid rusty-background p-5">
            <div class="row">
                <div class="col-12 col-lg-5 text-center my-auto pb-5">
                    <img src="~/content/logo.svg" class="logoFooter" alt="Logo">
                </div>
                <div class="col-12 col-lg-6">
                    <div class="row g-0">
                        <div class="col-4 d-flex justify-content-center">
                            <ul>
                                <li>
                                    <p class="fw-bold text-black">Sklep</p>
                                </li>
                                <li>
                                    <a role="button" asp-controller="Zamowienie" asp-action="Index">Zamówienia</a>
                                </li>
                                <li>
                                    <a role="button" asp-controller="Produkt" asp-action="Index">Produkty</a>
                                </li>
                                <li>
                                    <a role="button" asp-controller="Kategoria" asp-action="Index">Kategorie</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-4 d-flex justify-content-center">
                            <ul>
                                <li>
                                    <p class="fw-bold text-black">Portal</p>
                                </li>
                                <li>
                                    <a role="button" asp-controller="Cukiernia" asp-action="Index">Cukiernie</a>
                                </li>
                                <li>
                                    <a role="button" asp-controller="Skladnik" asp-action="Index">Składniki</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-4 d-flex justify-content-center">
                            <ul>
                                <li>
                                    <p class="fw-bold text-black">Obsługa klienta</p>
                                </li>
                                <li>
                                    <a role="button" asp-controller="Klient" asp-action="Index">Klienci</a>
                                </li>
                                <li>
                                    <a role="button" asp-controller="Reklamacja" asp-action="Index">Reklamacje</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
