@model Firma.Data.Data.CMS.Aktualnosc

@{
    ViewData["Title"] = "Edytuj aktualność";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-white">
                <h4 class="mb-0 text-center">Formularz edycji aktualności</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="IdAktualnosci" />

                    <div class="form-group mb-3">
                        <label asp-for="Tytul" class="form-label fw-bold"></label>
                        <input asp-for="Tytul" class="form-control" placeholder="Wprowadź tytuł" />
                        <span asp-validation-for="Tytul" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Tresc" class="form-label fw-bold"></label>
                        <textarea asp-for="Tresc" class="form-control" rows="4" placeholder="Wprowadź treść"></textarea>
                        <span asp-validation-for="Tresc" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Pozycja" class="form-label fw-bold"></label>
                        <input asp-for="Pozycja" class="form-control" placeholder="Pozycja wyświetlania" />
                        <span asp-validation-for="Pozycja" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AdresURL" class="form-label fw-bold"></label>
                        <input asp-for="AdresURL" class="form-control" placeholder="Wprowadź adres URL" />
                        <span asp-validation-for="AdresURL" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
