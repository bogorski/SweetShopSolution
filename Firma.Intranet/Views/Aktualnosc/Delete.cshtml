@model Firma.Data.Data.CMS.Aktualnosc

@{
    ViewData["Title"] = "Usuń aktualność";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header text-white">
                <h4 class="mb-0 text-center">Potwierdź usunięcie aktualności</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Tytuł</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Tytul)</dd>

                    <dt class="col-sm-4 fw-bold">Treść</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Tresc)</dd>

                    <dt class="col-sm-4 fw-bold">Pozycja</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Pozycja)</dd>

                    <dt class="col-sm-4 fw-bold">Adres URL</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AdresURL)</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdAktualnosci" />
                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger">Usuń</button>
                        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
