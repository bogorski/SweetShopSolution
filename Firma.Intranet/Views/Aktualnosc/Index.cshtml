@model IEnumerable<Firma.Data.Data.CMS.Aktualnosc>

@{
    ViewData["Title"] = "Aktualności";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3">Lista aktualności</h1>
        <a asp-action="Create" class="btn btn-primary">Dodaj nową aktualność</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-color">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Pozycja)</th>
                    <th>@Html.DisplayNameFor(model => model.Tytul)</th>
                    <th>@Html.DisplayNameFor(model => model.Tresc)</th>
                    <th class="text-center">Podgląd zdjęcia</th>
                    <th class="text-center">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="p-2">@Html.DisplayFor(modelItem => item.Pozycja)</td>
                        <td class="p-2">@Html.DisplayFor(modelItem => item.Tytul)</td>
                        <td class="p-2">@Html.DisplayFor(modelItem => item.Tresc)</td>
                        <td class="p-2 text-center">
                            <img src="@item.AdresURL" alt="Zdjęcie" class="img-preview" />
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdAktualnosci" class="btn btn-sm me-3">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@item.IdAktualnosci" class="btn btn-sm">Usuń</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
