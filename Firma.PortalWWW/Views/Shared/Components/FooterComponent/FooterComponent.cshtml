@model IEnumerable<Firma.Data.Data.Sklep.Kategoria>

<footer class="mt-auto">
    <div class="container-fluid rusty-background p-5">
        <div class="row">
            <div class="col-12 col-lg-5 d-flex flex-column align-items-center justify-content-center text-center">
                <img src="~/content/logo.svg" class="logoFooter mb-1" alt="Logo">
                <p class="fw-bold my-2 rich-chocolate-color">Zainteresowały cię nasze produkty?</p>
                <a href="/sklep">Zamów z Glovo</a>
            </div>
            <div class="col-12 col-lg-6">
                <div class="row g-0">
                    <div class="col-4 offset-4 d-flex justify-content-center">
                        <ul>
                            <li>
                                <p class="fw-bold rich-chocolate-color">Menu</p>
                            </li>
                            <li>
                                <a href="/home" role="button">Strona główna</a>
                            </li>
                            <li>
                                <a href="/sklep" role="button">Sklep</a>
                            </li>
                            <li>
                                <a href="/home/Cukiernie" role="button">Cukiernie</a>
                            </li>
                            <li>
                                <a href="/home/Skladniki" role="button">Składniki</a>
                            </li>
                            <li>
                                <a href="/home/Kontakt" role="button">Kontakt</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-4 d-flex justify-content-center">
                        <ul>
                            <li>
                                <p class="fw-bold rich-chocolate-color">Kategorie</p>
                            </li>
                            @foreach (var item in Model)
                            {
                                <li>
                                    <a asp-controller="Sklep" asp-action="Index" asp-route-id="@item.IdKategorii" role="button">@item.Nazwa</a>
                                </li>
                            }
                            <li>
                                <a asp-controller="Sklep" asp-action="Index" asp-route-id="" role="button">Wszystko</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-4 border-secondary" />
        <div class="text-center small">
            &copy; 2025 Sweet Shop. Wszelkie prawa zastrzeżone.
        </div>
    </div>
</footer>


