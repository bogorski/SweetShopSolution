@model Firma.Data.Data.CMS.CompanyHistory

<div class="container">
    <div class="row">
        <div class="col-12 col-xl-6 mb-4 mb-xl-0">
            <img src=@Model.AdresURL alt="company history" class="shop-img img-fluid rounded shadow" />
        </div>

        <div class="col-12 col-xl-6 d-flex flex-column align-items-center justify-content-center">
            <h2 class="fw-bold mb-3 dark-rusty-color">Historia firmy</h2>
            <h5 class="text-muted mb-4">@Model.Header</h5>
            @Html.Raw(Model.Contents)
        </div>
    </div>
</div>