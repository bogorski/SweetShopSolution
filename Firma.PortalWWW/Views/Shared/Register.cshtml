@model Firma.PortalWWW.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card shadow-sm">
                <div class="card-header rusty-background text-white text-center">
                    <h3 class="mb-0">Rejestracja</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Imie" class="form-label"></label>
                            <input asp-for="Imie" class="form-control" />
                            <span asp-validation-for="Imie" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nazwisko" class="form-label"></label>
                            <input asp-for="Nazwisko" class="form-control" />
                            <span asp-validation-for="Nazwisko" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Adres" class="form-label"></label>
                            <input asp-for="Adres" class="form-control" />
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefon" class="form-label"></label>
                            <input asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Hasło</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Potwierdź hasło</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary w-50 mx-auto">Zarejestruj się</button>
                        </div>
                    </form>
                </div>
            </div>

            <p class="mt-3 text-center">
                Masz już konto? <a asp-action="Login" class="text-primary fw-bold text-decoration-none">Zaloguj się</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
