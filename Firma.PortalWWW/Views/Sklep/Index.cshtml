@model IEnumerable<Firma.Data.Data.Sklep.Produkt>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SklepLayout.cshtml";
}

<div class="container m-5">
    <div class="row mb-2">
        <div class="col-12 text-center mb-2">
            <h1 class=" section-title mb-5">Nasze produkty</h1>
        </div>
        <div class="col-12">
            @* <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown"> *@
            @*     Sortuj według *@
            @* </button> *@
            @* <ul class="dropdown-menu"> *@
            @*     <li><a class="dropdown-item" href="#">Najpopularniejsze</a></li> *@
            @*     <li><a class="dropdown-item" href="#">Najnowsze</a></li> *@
            @*     <li><a class="dropdown-item" href="#">Cena: od najniższej</a></li> *@
            @*     <li><a class="dropdown-item" href="#">Cena: od najwyższej</a></li> *@
            @* </ul> *@
        </div>
    </div>
<div class="row g-3">
    @foreach (var item in Model)
    {
            <div class="col-lg-4 col-md-6 col-12 my-3">
                <div class="card product-card h-100 border border-1">
                    <img src="@(string.IsNullOrEmpty(item.AdresURL) ? "https://x13.pl/img/cms/blog/zmiana-zdjecia/nowe_zdjecie.jpg" : item.AdresURL)"
                         class="card-img-top product-img" 
                         alt=@item.Nazwa
                         onerror="this.onerror=null; this.src='https://x13.pl/img/cms/blog/zmiana-zdjecia/nowe_zdjecie.jpg';">
                    <div class="card-body my-3">
                        <h5 class="card-title">@item.Nazwa</h5>
                        <p class="card-text">@item.Opis</p>
                        <div class="d-flex justify-content-between align-items-center my-2">
                            <h4 class="my-3">@item.Cena.ToString("#,##0.00") zł</h4>
                            <div class="input-group input-group-sm my-3" style="width: 120px;">
                                <button class="btn btn-outline-secondary" type="button">-</button>
                                <input type="text" class="form-control quantity-input text-center" value="1">
                                <button class="btn btn-outline-secondary" type="button">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 mb-3">
                        <button class="btn btn-primary w-100">Dodaj do koszyka</button>
                    </div>
                </div>
            </div>
    }
</div>
</div>

