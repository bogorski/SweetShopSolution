@model Firma.Data.Data.Sklep.Produkt
@{
    ViewData["Title"] = "Szczegoly";
    Layout = "~/Views/Shared/_SklepLayout.cshtml";
}


<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-header rusty-background text-white fw-bold text-center">
                    <h2 class="mb-0">@Model.Nazwa</h2>
                </div>
                <div class="card-body text-center">
                    <img src="@Model.AdresURL" alt="@Model.Nazwa" class="img-fluid product-img mb-3" style="max-width: 300px;" />
                    <p>@Model.Opis</p>
                    <p class="h4 fw-bold">Cena: <span class="text-primary">@Model.Cena.ToString("C2")</span></p>
                </div>
                <div class="card-body text-center">
                    <form asp-controller="Koszyk" asp-action="Dodaj" method="post">
                        <input type="hidden" name="produktId" value="@Model.IdProduktu" />
                        <div class="mb-3">
                            <div class="d-flex justify-content-center align-items-center gap-2">
                                <label for="ilosc" class="form-label fw-bold mb-0 text-primary">Ilość:</label>
                                <input type="number" id="ilosc" name="ilosc" value="1" min="1" class="form-control w-25" />
                                <button type="submit" class="btn btn-primary">
                                    Dodaj do koszyka
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
