@model IEnumerable<Firma.Data.Data.Sklep.Kategoria>

<div class="collapse navbar-collapse ms-5" id="navbarNav">
    <ul class="navbar-nav me-auto">
        @foreach (var item in Model)
        {
            <li class="nav-item mx-3">
                <a class="nav-link nav-link-large" asp-area="" asp-controller="Sklep" asp-action="Index" asp-route-id="@item.IdKategorii">@item.Nazwa</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link nav-link-large" asp-area="" asp-controller="Sklep" asp-action="Index" asp-route-id="">Cały asortyment</a>
        </li>
    </ul>
    <ul class="navbar-nav ms-auto">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <li class="nav-item d-flex align-items-center mx-2">
                <span class="nav-link mx-2">Witaj, <strong>@User.Identity.Name</strong>!</span>
            </li>
            <li class="nav-item d-flex align-items-center me-2">
                <form method="post" asp-controller="Account" asp-action="Logout" id="logoutForm" class="d-flex">
                    <button type="submit" class="btn btn-link nav-link p-0 m-0" style="text-decoration: none;">
                        Wyloguj się
                    </button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link nav-link-large" asp-controller="Account" asp-action="Login">Zaloguj się</a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-link-large" asp-controller="Account" asp-action="Register">Zarejestruj się</a>
            </li>
        }
    </ul>
</div>